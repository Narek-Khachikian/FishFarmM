@inject IViewLocalizer _localizer
@model MeasurmentUnit

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@_localizer["Create Measurment Unit"]</h1>
</div>


<table class="table">
    <tr class="d-flex">
        <td class="col-2"></td>
        <td class="col-8">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="CreateMeasurmentUnit" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@_localizer["Create"]" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index">@_localizer["Back to Measurment Units"]</a>
            </div>
        </td>
        <td class="col-2"></td>
    </tr>
</table>

