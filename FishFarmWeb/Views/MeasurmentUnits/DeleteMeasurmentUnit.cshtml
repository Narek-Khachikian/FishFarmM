@inject IViewLocalizer _localizer
@model MeasurmentUnit

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@_localizer["Delete Measurment Unit"]</h1>
</div>

<p class="text-danger">@_localizer["Are you sure you want to delete this measurment unit?"]</p>

<table class="table">
    <tr class="d-flex">
        <td class="col-2"></td>
        <td class="col-8">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="DeleteMeasurmentUnitConfirmed" method="post">

                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input disabled asp-for="Id" class="form-control" />
                            <input hidden asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input disabled asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CreationDate" class="control-label"></label>
                            <input disabled asp-for="CreationDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastModificationDate" class="control-label"></label>
                            <input disabled asp-for="LastModificationDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastModifiedByName" class="control-label"></label>
                            <input disabled asp-for="LastModifiedByName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@_localizer["Delete"]" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Index">@_localizer["Back to Measurment Units"]</a>
            </div>
        </td>
        <td class="col-2"></td>
    </tr>
</table>