@inject IViewLocalizer _localizer
@model SectionIndexViewModel

<div class="container">
    <h1>@_localizer["All Sections"]</h1>
</div>

<a asp-controller="Sections" asp-action="CreateSection" class="btn btn-primary">@_localizer["Create New"]</a>
@TempData["SectionMessage"]
<div>
    <table class="table">
        <tr class="d-flex">
            <td class="table- col-2">
            </td>
            <td class="col-8">
                <table class="table table-bordered">
                    <tr class="d-flex">
                        <th class="col-2">
                            @_localizer["Id"]
                        </th>
                        <th class="col-4">
                            @_localizer["Name"]
                        </th>
                        <th class="col-3">
                            @_localizer["Options"]
                        </th>
                        <th class="col-3">
                            @_localizer["Message"]
                        </th>
                    </tr>

                    @foreach (Section item in Model.Sections)
                    {
                        <tr class="d-flex">
                            <td class="col-2">
                                @item.Id
                            </td>
                            <td class="col-4">
                                @item.Name
                            </td>
                            <td class="col-3">
                                <a asp-controller="Sections" asp-action="EditSection" asp-route-id="@item.Id" class="btn btn-warning">@_localizer["Edit"]</a>
                                <a asp-controller="Sections" asp-action="DeleteSection" asp-route-id="@item.Id" class="btn btn-danger">@_localizer["Delete"]</a>
                            </td>
                            <td class="col-3">
                                <span></span>
                            </td>
                        </tr>
                    }
                </table>
            </td>
            <td class="col-2">
            </td>
        </tr>
    </table>
</div>