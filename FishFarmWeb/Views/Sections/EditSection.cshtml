@inject IViewLocalizer _localizer
@model Section

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@_localizer["Edit Section"]</h1>
</div>


<table class="table">
    <tr class="d-flex">
        <td class="col-2"></td>
        <td class="col-8">
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="EditSection" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input disabled asp-for="Id" class="form-control" />
                            <input hidden asp-for="Id" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="@_localizer["Edit"]" class="btn btn-warning" />
                        </div>
                    </form>
                </div>
            </div>

            <div>
                <a asp-action="Index">@_localizer["Back to Sections"]</a>
            </div>
        </td>
        <td class="col-2"></td>
    </tr>
</table>