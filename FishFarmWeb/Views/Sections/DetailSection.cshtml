@inject IViewLocalizer _localizer
@model Section

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1>@_localizer["Section Details"]</h1>
</div>

<table class="table">
    <tr class="d-flex">
        <td class="col-2"></td>
        <td class="col-8">
            <div class="row">
                <div class="col-md-4">
                    
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Id" class="control-label"></label>
                            <input disabled asp-for="Id" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input disabled asp-for="Name" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="CreationDate" class="control-label"></label>
                            <input disabled asp-for="CreationDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastModificationDate" class="control-label"></label>
                            <input disabled asp-for="LastModificationDate" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label asp-for="LastModifiedByName" class="control-label"></label>
                            <input disabled asp-for="LastModifiedByName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <a asp-action="@nameof(SectionsController.EditSection)" asp-route-id="@Model.Id"
                               class="btn btn-warning">@_localizer["Edit"]</a>
                        </div>
                    
                </div>
            </div>
            <div>
                <a asp-action="Index">@_localizer["Back to Sections"]</a>
            </div>
        </td>
        <td class="col-2"></td>
    </tr>
</table>